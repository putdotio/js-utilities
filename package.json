{
  "name": "@putdotio/utilities",
  "version": "1.15.1",
  "license": "MIT",
  "author": "put.io <ui@put.io>",
  "main": "dist/index.js",
  "module": "dist/utilities.esm.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "analyze": "size-limit --why",
    "build": "dts build",
    "lint": "dts lint",
    "prepare": "dts build",
    "size": "size-limit",
    "start": "dts watch",
    "test": "dts test"
  },
  "husky": {
    "hooks": {
      "pre-commit": "dts lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "jest": {
    "testEnvironment": "node"
  },
  "engines": {
    "node": ">=18"
  },
  "size-limit": [
    {
      "path": "dist/utilities.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/utilities.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@putdotio/api-client": "^8.46.0",
    "@size-limit/preset-small-lib": "^11.0.2",
    "@tsconfig/recommended": "^1.0.3",
    "@types/bytes": "^3.1.4",
    "@types/truncate-middle": "^1.0.4",
    "dts-cli": "^2.0.4",
    "husky": "^9.0.10",
    "size-limit": "^11.0.2",
    "tslib": "^2.6.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "bytes": "^3.1.2",
    "dayjs": "^1.11.10",
    "es6-error": "^4.1.1",
    "truncate-middle": "^1.0.6"
  },
  "peerDependencies": {
    "@putdotio/api-client": ">=8.46.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
